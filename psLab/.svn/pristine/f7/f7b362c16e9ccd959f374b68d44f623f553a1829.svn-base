double ScoreCut(double zenith)
{
double x = cos(zenith);
if (x<0.24) {
	return -0.3027672918 + 5.804754765*x - 24.59217865465*pow(x,2.) + 34.81464541687* pow(x,3.);
}
else if (x>=0.24 && x<0.9) {
	return 0.170585766969 - 0.05536925460576*x - 0.043842856256*pow(x,2.) + 0.033029169909297*pow(x,3.) + 0.08735148324555*pow(x,4.) + 0.0912790747995*pow(x,5.) + 0.041255484455*pow(x,6.) - 0.05677034140582*pow(x,7.) - 0.1932596379637*pow(x,8.);
}

else if (x>=0.9) {
	return -2.58275160749 + 3.1697167770988*x + 3.24316094208399*pow(x,2.) - 3.7895869053687687*pow(x,3.);
}

return 1.0;

}
